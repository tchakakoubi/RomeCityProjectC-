<Page x:Class="RomeCity.Log"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RomeCity"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Log">

    <Grid Background="RosyBrown">
        <PasswordBox x:Name="pass" HorizontalAlignment="Left" VerticalAlignment="Top" Width="208" Margin="372,218,0,0" Height="40" RenderTransformOrigin="0.494,2.416" Style="{x:Null}" />
        <TextBox x:Name="user" HorizontalAlignment="Left" Height="40" Margin="372,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="208" Style="{x:Null}" RenderTransformOrigin="-0.876,0.435"/>
        <TextBlock HorizontalAlignment="Left" Margin="155,126,0,0" TextWrapping="Wrap" Text="UserName" VerticalAlignment="Top" Height="40" Width="158"  />
        <TextBlock HorizontalAlignment="Left" Margin="155,218,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Height="40" Width="107"/>
        <Button x:Name="button" Content="Submit" HorizontalAlignment="Left" Margin="414,352,0,0" VerticalAlignment="Top" Width="128" Click="button_Click"/>
    </Grid>




</Page>







